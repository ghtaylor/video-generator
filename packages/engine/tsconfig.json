{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "lib": ["ESNext"],
    "paths": {
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@core/*": ["core/*"],
      "@common/*": ["common/*"]
    },
    "rootDirs": ["./src", "./__tests__"],
    "types": ["vitest/globals"]

  },
  "include": ["src/**/*", "sst-env.d.ts", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
 
{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "lib": ["ESNext"],
    "paths": {
      "@infrastructure/*": ["infrastructure/*"],
      "@core/*": ["core/*"],
    },
    "rootDirs": ["./src"],
  },
  "include": ["src/**/*", "sst-env.d.ts"],
  "exclude": ["node_modules"]
}
 